<Window x:Class="eStarter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:eStarter"
        xmlns:models="clr-namespace:eStarter.Models"
        xmlns:conv="clr-namespace:eStarter.Converters"
        mc:Ignorable="d"
        Title="{DynamicResource Str_AppName}" Height="700" Width="1200"
        Background="{DynamicResource MetroBackgroundBrush}"
        FontFamily="Microsoft YaHei UI, Segoe UI">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <!-- Start content (original main UI) -->
        <Grid x:Name="StartContent">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Metro Header Bar -->
            <Border Grid.Row="0" Background="{DynamicResource MetroBackgroundBrush}" Padding="30,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Metro Typography: Thin/Light title -->
                    <TextBlock Text="{DynamicResource Str_Start}" Style="{StaticResource MetroHeaderTextStyle}" Grid.Column="0"/>

                    <!-- Metro Style Buttons -->
                    <StackPanel Orientation="Horizontal" 
                               Grid.Column="2" 
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center">
                        <Button Content="{DynamicResource Str_Refresh}" 
                                Command="{Binding RefreshCommand}" 
                                Margin="5,0"
                                Padding="20,10"
                                Background="Transparent"
                                Foreground="{DynamicResource MetroForegroundBrush}"
                                BorderBrush="{DynamicResource MetroForegroundBrush}"
                                BorderThickness="2"
                                Cursor="Hand"
                                FontSize="12"
                                FontWeight="Normal">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                           BorderBrush="{TemplateBinding BorderBrush}"
                                           BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"
                                                        Margin="{TemplateBinding Padding}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource MetroSeparatorBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource MetroAccentBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Content="{DynamicResource Str_InstallSample}" 
                                Command="{Binding InstallCommand}" 
                                Margin="5,0"
                                Padding="20,10"
                                Background="{DynamicResource MetroAccentBrush}"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                FontSize="12"
                                FontWeight="Normal">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"
                                                        Margin="{TemplateBinding Padding}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Search Button -->
                        <Button Content="&#xE11A;" FontFamily="Segoe UI Symbol" FontSize="20"
                                Command="{Binding OpenSearchCommand}"
                                Margin="20,0,0,0" Padding="10"
                                Background="Transparent" BorderThickness="0" Cursor="Hand"
                                Foreground="{DynamicResource MetroForegroundBrush}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource MetroSeparatorBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource MetroAccentBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- User Profile -->
                        <Button Margin="20,0,0,0" Padding="0" Background="Transparent" BorderThickness="0" Cursor="Hand"
                                Command="{Binding ToggleTimeCommand}" ToolTip="{DynamicResource Str_ToggleTimeTooltip}">
                            <StackPanel Orientation="Horizontal">
                                <StackPanel VerticalAlignment="Center" Margin="0,0,10,0" HorizontalAlignment="Right">
                                    <TextBlock Text="{Binding UserName}" 
                                               Foreground="{DynamicResource MetroForegroundBrush}" 
                                               FontSize="14" 
                                               HorizontalAlignment="Right"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding CurrentTime}" 
                                               Foreground="{DynamicResource MetroForegroundBrush}" 
                                               FontSize="12" 
                                               Opacity="0.7" 
                                               HorizontalAlignment="Right"
                                               Visibility="{Binding ShowTime, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </StackPanel>
                                <Border Width="40" Height="40" CornerRadius="20" Background="#FFCCCCCC">
                                    <TextBlock Text="" FontFamily="Segoe UI Symbol" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="20"/>
                                </Border>
                            </StackPanel>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <ContentPresenter/>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Metro Tiles Area -->
            <ScrollViewer Grid.Row="1" 
                         HorizontalScrollBarVisibility="Disabled" 
                         VerticalScrollBarVisibility="Auto"
                         Background="{DynamicResource MetroBackgroundBrush}"
                         Padding="30,20,30,30">
                <ItemsControl ItemsSource="{Binding InstalledApps}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:AppEntry}">
                            <ContentControl Loaded="Tile_Loaded" Opacity="0">
                                <ContentControl.RenderTransform>
                                    <TranslateTransform X="400" Y="0"/>
                                </ContentControl.RenderTransform>
                                
                                <Button Style="{StaticResource MetroTileStyle}" 
                                       Command="{Binding DataContext.LaunchCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                       CommandParameter="{Binding}"/>
                            </ContentControl>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- Page host overlays the start content when a page is active -->
        <Grid x:Name="PageHostContainer" Visibility="Collapsed" Background="{DynamicResource MetroBackgroundBrush}">
            <Grid.RenderTransform>
                <TranslateTransform x:Name="PageHostTransform" X="0"/>
            </Grid.RenderTransform>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ContentControl x:Name="PageHost" Grid.Row="0" Grid.RowSpan="2" Margin="0,0,0,0"/>

            <!-- Global Back button (top-left) -->
            <Button x:Name="BackButton" Content="&#xE0A6;" 
                    Style="{StaticResource MetroBackButtonStyle}"
                    VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30,30,0,0"
                    Click="BackButton_Click"/>
        </Grid>

        <!-- Search Pane (Windows 8 Style) -->
        <Grid x:Name="SearchPane" Width="346" HorizontalAlignment="Right" 
              Background="{DynamicResource MetroBackgroundBrush}">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
            </Grid.Effect>
            <Grid.RenderTransform>
                <TranslateTransform X="350"/>
            </Grid.RenderTransform>
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSearchOpen}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" 
                                                       To="0" Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <ExponentialEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" 
                                                       To="350" Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <ExponentialEase EasingMode="EaseIn"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="30,40,30,20">
                <TextBlock Text="{DynamicResource Str_Search}" Style="{StaticResource MetroSubheaderTextStyle}" FontSize="24"/>
                <TextBox x:Name="SearchBox" 
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="16" Padding="5" Margin="0,10,0,0"
                         BorderThickness="2" BorderBrush="{DynamicResource MetroAccentBrush}"/>
            </StackPanel>

            <ListView Grid.Row="1" ItemsSource="{Binding SearchResults}" 
                      Background="Transparent" BorderThickness="0"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Button Style="{StaticResource MetroTileStyle}" 
                                Command="{Binding DataContext.LaunchCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                CommandParameter="{Binding}"
                                HorizontalAlignment="Left"
                                Margin="10,5"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
            
            <!-- Close Search Button -->
            <Button Content="&#xE106;" FontFamily="Segoe UI Symbol" FontSize="20"
                    Command="{Binding CloseSearchCommand}"
                    HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,20,0"
                    Background="Transparent" BorderThickness="0" Foreground="{DynamicResource MetroForegroundBrush}">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</Window>
