<Application x:Class="eStarter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:eStarter"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/MetroStyles.xaml"/>
                <ResourceDictionary Source="Resources/Strings.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Dynamic Theme Resources -->
            <Color x:Key="MetroAccentColor">#FF0078D7</Color>
            <SolidColorBrush x:Key="MetroAccentBrush" Color="{DynamicResource MetroAccentColor}"/>
            <SolidColorBrush x:Key="MetroBackgroundBrush" Color="#FF1F1F1F"/>
            <SolidColorBrush x:Key="MetroForegroundBrush" Color="White"/>
            <SolidColorBrush x:Key="MetroSeparatorBrush" Color="#33FFFFFF"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
