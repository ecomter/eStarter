<UserControl x:Class="eStarter.Views.SystemStatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Height="40">

    <Border Background="{DynamicResource MetroBackgroundBrush}" 
            BorderBrush="{DynamicResource MetroSeparatorBrush}"
            BorderThickness="0,1,0,0">
        <Grid Margin="20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left: System Status -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <!-- Kernel Status Indicator -->
                <Border x:Name="KernelStatusIndicator"
                        Width="8" Height="8" 
                        CornerRadius="4"
                        Background="#FF00B159"
                        VerticalAlignment="Center"
                        Margin="0,0,8,0"
                        ToolTip="System Running"/>
                
                <TextBlock x:Name="ProcessCountText"
                           Text="0 apps running"
                           FontSize="11"
                           Foreground="{DynamicResource MetroForegroundBrush}"
                           Opacity="0.7"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Center: Quick Actions -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                
                <!-- Settings Button -->
                <Button x:Name="SettingsButton"
                        Content="&#xE115;"
                        FontFamily="Segoe UI Symbol"
                        FontSize="14"
                        Background="Transparent"
                        Foreground="{DynamicResource MetroForegroundBrush}"
                        BorderThickness="0"
                        Padding="12,8"
                        Cursor="Hand"
                        ToolTip="Settings"
                        Click="SettingsButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource MetroSeparatorBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Apps Button -->
                <Button x:Name="AppsButton"
                        Content="&#xE179;"
                        FontFamily="Segoe UI Symbol"
                        FontSize="14"
                        Background="Transparent"
                        Foreground="{DynamicResource MetroForegroundBrush}"
                        BorderThickness="0"
                        Padding="12,8"
                        Cursor="Hand"
                        ToolTip="All Apps"
                        Click="AppsButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource MetroSeparatorBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <!-- Right: Clock & Notifications -->
            <StackPanel Grid.Column="2" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Center">
                
                <!-- Notification Bell -->
                <Button x:Name="NotificationButton"
                        FontFamily="Segoe UI Symbol"
                        FontSize="14"
                        Background="Transparent"
                        Foreground="{DynamicResource MetroForegroundBrush}"
                        BorderThickness="0"
                        Padding="12,8"
                        Cursor="Hand"
                        ToolTip="Notifications"
                        Click="NotificationButton_Click">
                    <Grid>
                        <TextBlock Text="&#xE1EF;"/>
                        <!-- Notification Badge -->
                        <Border x:Name="NotificationBadge"
                                Background="#FFE51400"
                                Width="8" Height="8"
                                CornerRadius="4"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,-2,-2,0"
                                Visibility="Collapsed"/>
                    </Grid>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource MetroSeparatorBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Clock -->
                <TextBlock x:Name="ClockText"
                           Text="12:00"
                           FontSize="12"
                           Foreground="{DynamicResource MetroForegroundBrush}"
                           VerticalAlignment="Center"
                           Margin="8,0,0,0"/>
                
                <TextBlock x:Name="DateText"
                           Text="Jan 1"
                           FontSize="11"
                           Foreground="{DynamicResource MetroForegroundBrush}"
                           Opacity="0.7"
                           VerticalAlignment="Center"
                           Margin="8,0,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
