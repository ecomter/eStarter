<UserControl x:Class="eStarter.Views.MetroAppBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Height="88">

    <UserControl.Resources>
        <!-- AppBar Button Style -->
        <Style x:Key="AppBarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                Padding="8,12">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="icon"
                                           Text="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                                           FontFamily="Segoe UI Symbol"
                                           FontSize="20"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="{TemplateBinding Content}"
                                           FontSize="11"
                                           HorizontalAlignment="Center"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#55FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="#FF1F1F1F" 
            BorderBrush="#33FFFFFF" 
            BorderThickness="0,1,0,0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Action Buttons -->
            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Left"
                        Margin="40,0,0,0">
                
                <Button x:Name="AllAppsButton"
                        Style="{StaticResource AppBarButtonStyle}"
                        Content="All apps"
                        Tag="&#xE179;"
                        Click="AllAppsButton_Click"/>

                <Button x:Name="SearchButton"
                        Style="{StaticResource AppBarButtonStyle}"
                        Content="Search"
                        Tag="&#xE11A;"
                        Click="SearchButton_Click"/>

                <Button x:Name="RefreshButton"
                        Style="{StaticResource AppBarButtonStyle}"
                        Content="Refresh"
                        Tag="&#xE117;"
                        Click="RefreshButton_Click"/>
            </StackPanel>

            <!-- Right: System Buttons -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Margin="0,0,40,0">

                <Button x:Name="SettingsButton"
                        Style="{StaticResource AppBarButtonStyle}"
                        Content="Settings"
                        Tag="&#xE115;"
                        Click="SettingsButton_Click"/>

                <Button x:Name="PowerButton"
                        Style="{StaticResource AppBarButtonStyle}"
                        Content="Power"
                        Tag="&#xE10D;"
                        Click="PowerButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
