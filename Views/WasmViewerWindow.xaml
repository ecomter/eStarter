<Window x:Class="eStarter.Views.WasmViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WASM Viewer" Height="480" Width="480"
        WindowStartupLocation="CenterScreen"
        Background="#FF1D1D1D" Foreground="White"
        FontFamily="Segoe UI"
        Closed="Window_Closed">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <DockPanel>
                <Ellipse x:Name="StatusDot" Width="12" Height="12"
                         Fill="#FF888888" VerticalAlignment="Center"
                         DockPanel.Dock="Right" Margin="0,0,0,0"/>
                <TextBlock x:Name="TitleText" Text="WASM App"
                           FontSize="26" FontWeight="Light"/>
            </DockPanel>
            <TextBlock x:Name="SubtitleText" Text="eStarter WASM Sandbox"
                       FontSize="12" Opacity="0.5" Margin="0,3,0,0"/>
        </StackPanel>

        <!-- Info bar -->
        <Border Grid.Row="1" Background="#FF2D2D2D" Padding="14,10"
                Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="RUNTIME" FontSize="10" Opacity="0.5"/>
                    <TextBlock Text="WebAssembly" FontSize="13"/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBlock Text="MEMORY LIMIT" FontSize="10" Opacity="0.5"/>
                    <TextBlock x:Name="MemoryText" Text="â€”" FontSize="13"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="STATUS" FontSize="10" Opacity="0.5"/>
                    <TextBlock x:Name="StatusText" Text="Starting" FontSize="13"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Log output -->
        <Border Grid.Row="2" Background="#FF111111" Padding="12"
                Margin="0,0,0,12">
            <ScrollViewer x:Name="LogScroller" VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="LogOutput"
                           FontFamily="Cascadia Code, Consolas, Courier New"
                           FontSize="12" Foreground="#FFCCCCCC"
                           TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>

        <!-- Buttons -->
        <UniformGrid Grid.Row="3" Columns="2">
            <Button x:Name="StopButton" Content="â¹ Stop"
                    Click="Stop_Click" Margin="0,0,4,0"
                    Height="34" Background="#FFE81123" Foreground="White"
                    BorderThickness="0" FontSize="13" Cursor="Hand"/>
            <Button Content="ðŸ—‘ Clear Log"
                    Click="Clear_Click" Margin="4,0,0,0"
                    Height="34" Background="#FF2D2D2D" Foreground="White"
                    BorderThickness="0" FontSize="13" Cursor="Hand"/>
        </UniformGrid>
    </Grid>
</Window>
