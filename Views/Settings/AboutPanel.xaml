<UserControl x:Class="eStarter.Views.Settings.AboutPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FontFamily="Microsoft YaHei, Segoe UI">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,20,0">
        <StackPanel Margin="0,0,0,40">
            <!-- Header -->
            <TextBlock Text="About" 
                       FontFamily="Microsoft YaHei Light, Segoe UI Light"
                       FontSize="42" FontWeight="Light"
                       Foreground="{DynamicResource MetroForegroundBrush}"
                       Margin="0,0,0,30"/>

            <!-- System Info -->
            <Border Background="{DynamicResource MetroSeparatorBrush}" 
                    Padding="20" Margin="0,0,0,30">
                <StackPanel>
                    <TextBlock Text="eStarter" FontSize="28" FontWeight="Light"
                               Foreground="{DynamicResource MetroForegroundBrush}"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Version 1.0.0" FontSize="14"
                               Foreground="{DynamicResource MetroForegroundBrush}" Opacity="0.7"/>
                </StackPanel>
            </Border>

            <!-- PC Info -->
            <TextBlock Text="PC info" FontSize="18" FontWeight="Light"
                       Foreground="{DynamicResource MetroAccentBrush}" Margin="0,0,0,15"/>
            
            <Grid Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Grid.Column="0" Text="PC name:" FontSize="13"
                           Foreground="{DynamicResource MetroForegroundBrush}" Opacity="0.7" Margin="0,0,0,8"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Source={x:Static System:Environment.MachineName}}"
                           FontSize="13" Foreground="{DynamicResource MetroForegroundBrush}" Margin="0,0,0,8"
                           xmlns:System="clr-namespace:System;assembly=mscorlib"/>
                
                <TextBlock Grid.Row="1" Grid.Column="0" Text="User name:" FontSize="13"
                           Foreground="{DynamicResource MetroForegroundBrush}" Opacity="0.7" Margin="0,0,0,8"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding UserName}"
                           FontSize="13" Foreground="{DynamicResource MetroForegroundBrush}" Margin="0,0,0,8"/>
                
                <TextBlock Grid.Row="2" Grid.Column="0" Text="OS Version:" FontSize="13"
                           Foreground="{DynamicResource MetroForegroundBrush}" Opacity="0.7" Margin="0,0,0,8"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="eStarter 1.0" 
                           FontSize="13" Foreground="{DynamicResource MetroForegroundBrush}" Margin="0,0,0,8"/>
                
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Kernel version:" FontSize="13"
                           Foreground="{DynamicResource MetroForegroundBrush}" Opacity="0.7" Margin="0,0,0,8"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="1.0.0"
                           FontSize="13" Foreground="{DynamicResource MetroForegroundBrush}" Margin="0,0,0,8"/>
                
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Storage used:" FontSize="13"
                           Foreground="{DynamicResource MetroForegroundBrush}" Opacity="0.7" Margin="0,0,0,8"/>
                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding StorageUsedText}"
                           FontSize="13" Foreground="{DynamicResource MetroForegroundBrush}" Margin="0,0,0,8"/>
            </Grid>

            <!-- Features -->
            <TextBlock Text="Features" FontSize="18" FontWeight="Light"
                       Foreground="{DynamicResource MetroAccentBrush}" Margin="0,0,0,15"/>
            
            <StackPanel Margin="0,0,0,30">
                <TextBlock FontSize="13" Foreground="{DynamicResource MetroForegroundBrush}" Margin="0,0,0,5">
                    <Run Text="•"/> <Run Text=" Metro-style Start screen with live tiles"/>
                </TextBlock>
                <TextBlock FontSize="13" Foreground="{DynamicResource MetroForegroundBrush}" Margin="0,0,0,5">
                    <Run Text="•"/> <Run Text=" Sandboxed app execution environment"/>
                </TextBlock>
                <TextBlock FontSize="13" Foreground="{DynamicResource MetroForegroundBrush}" Margin="0,0,0,5">
                    <Run Text="•"/> <Run Text=" Virtual file system with app isolation"/>
                </TextBlock>
                <TextBlock FontSize="13" Foreground="{DynamicResource MetroForegroundBrush}" Margin="0,0,0,5">
                    <Run Text="•"/> <Run Text=" Permission-based security model"/>
                </TextBlock>
                <TextBlock FontSize="13" Foreground="{DynamicResource MetroForegroundBrush}" Margin="0,0,0,5">
                    <Run Text="•"/> <Run Text=" Inter-process communication (IPC)"/>
                </TextBlock>
                <TextBlock FontSize="13" Foreground="{DynamicResource MetroForegroundBrush}" Margin="0,0,0,5">
                    <Run Text="•"/> <Run Text=" System notification service"/>
                </TextBlock>
            </StackPanel>

            <!-- Legal -->
            <TextBlock Text="Legal" FontSize="18" FontWeight="Light"
                       Foreground="{DynamicResource MetroAccentBrush}" Margin="0,0,0,15"/>
            
            <TextBlock FontSize="12" Foreground="{DynamicResource MetroForegroundBrush}" 
                       Opacity="0.7" TextWrapping="Wrap">
                © 2024 eStarter. This is a demonstration project inspired by Windows 8 Metro design.
                Windows is a trademark of Microsoft Corporation.
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
</UserControl>
