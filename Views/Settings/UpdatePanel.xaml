<UserControl x:Class="eStarter.Views.Settings.UpdatePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FontFamily="Microsoft YaHei, Segoe UI">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,20,0">
        <StackPanel Margin="0,0,0,40">
            <!-- Header -->
            <TextBlock Text="Update and recovery" 
                       FontFamily="Microsoft YaHei Light, Segoe UI Light"
                       FontSize="42" FontWeight="Light"
                       Foreground="{DynamicResource MetroForegroundBrush}"
                       Margin="0,0,0,30"/>

            <!-- System Update -->
            <TextBlock Text="System update" FontSize="18" FontWeight="Light"
                       Foreground="{DynamicResource MetroAccentBrush}" Margin="0,0,0,15"/>

            <Border Background="{DynamicResource MetroSeparatorBrush}" 
                    Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="&#xE10B;" FontFamily="Segoe UI Symbol" FontSize="32"
                               Foreground="#FF00B159" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Your system is up to date" FontSize="16"
                                   Foreground="{DynamicResource MetroForegroundBrush}"/>
                        <TextBlock Text="Last checked: today" FontSize="12"
                                   Foreground="{DynamicResource MetroForegroundBrush}" Opacity="0.7"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Button Content="Check for updates" 
                    Height="36" Padding="24,0"
                    HorizontalAlignment="Left"
                    Background="{DynamicResource MetroSeparatorBrush}"
                    Foreground="{DynamicResource MetroForegroundBrush}"
                    BorderThickness="0" Cursor="Hand" Margin="0,0,0,30">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource MetroAccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Recovery -->
            <TextBlock Text="Recovery" FontSize="18" FontWeight="Light"
                       Foreground="{DynamicResource MetroAccentBrush}" Margin="0,20,0,15"/>

            <!-- Refresh your PC -->
            <StackPanel Margin="0,0,0,25">
                <TextBlock Text="Refresh your PC without affecting your files" FontSize="16"
                           Foreground="{DynamicResource MetroForegroundBrush}" Margin="0,0,0,5"/>
                <TextBlock TextWrapping="Wrap" FontSize="13" 
                           Foreground="{DynamicResource MetroForegroundBrush}" Opacity="0.7" Margin="0,0,0,15">
                    If your PC isn't running well, you can refresh it without losing your photos, music, videos, 
                    and other personal files.
                </TextBlock>
                
                <Button Content="Get started" 
                        Height="36" Padding="24,0"
                        HorizontalAlignment="Left"
                        Background="{DynamicResource MetroSeparatorBrush}"
                        Foreground="{DynamicResource MetroForegroundBrush}"
                        BorderThickness="0" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bd" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="{DynamicResource MetroAccentBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <!-- Remove everything -->
            <StackPanel Margin="0,0,0,25">
                <TextBlock Text="Remove everything and reinstall" FontSize="16"
                           Foreground="{DynamicResource MetroForegroundBrush}" Margin="0,0,0,5"/>
                <TextBlock TextWrapping="Wrap" FontSize="13" 
                           Foreground="{DynamicResource MetroForegroundBrush}" Opacity="0.7" Margin="0,0,0,15">
                    If you want to recycle your PC or start over completely, you can reset it to its factory settings.
                </TextBlock>
                
                <Button x:Name="ResetButton" Content="Reset app data" 
                        Height="36" Padding="24,0"
                        HorizontalAlignment="Left"
                        Background="#FFCC0000"
                        Foreground="White"
                        BorderThickness="0" Cursor="Hand"
                        Click="ResetButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bd" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="#FF990000"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="#FF660000"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <!-- Advanced Startup -->
            <TextBlock Text="Advanced startup" FontSize="18" FontWeight="Light"
                       Foreground="{DynamicResource MetroAccentBrush}" Margin="0,20,0,15"/>
            
            <TextBlock TextWrapping="Wrap" FontSize="13" 
                       Foreground="{DynamicResource MetroForegroundBrush}" Opacity="0.7" Margin="0,0,0,15">
                Start up from a device or disc, change your PC's firmware settings, change startup settings,
                or restore eStarter from a system image.
            </TextBlock>
            
            <Button Content="Restart now" 
                    Height="36" Padding="24,0"
                    HorizontalAlignment="Left"
                    Background="{DynamicResource MetroSeparatorBrush}"
                    Foreground="{DynamicResource MetroForegroundBrush}"
                    BorderThickness="0" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource MetroAccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </ScrollViewer>
</UserControl>
