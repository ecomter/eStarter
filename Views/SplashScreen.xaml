<Window x:Class="eStarter.Views.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="eStarter" Height="280" Width="450"
        WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#FF0078D7"
        ShowInTaskbar="False"
        Topmost="True">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Logo / Title -->
            <TextBlock Text="eStarter"
                       FontFamily="Segoe UI Light"
                       FontSize="60"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,80"/>

            <!-- Horizontal Progress Bar -->
            <ProgressBar Width="280" Height="4" IsIndeterminate="True" 
                         Background="#33FFFFFF" Foreground="White" BorderThickness="0"/>
        </StackPanel>

	</Grid>
</Window>
